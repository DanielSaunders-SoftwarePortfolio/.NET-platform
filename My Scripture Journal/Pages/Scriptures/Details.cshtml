@page
@model My_Scripture_Journal.Pages.Scriptures.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Scripture</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Scripture Refernce</dt>
        <dd class="col-sm-10"><partial name="_CompositeScriptureReference" model="new My_Scripture_Journal.Pages.Shared.ReferenceViewModel(Model.Scripture)"></partial></dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Notes)
        </dt>
        <dd class="col-sm-10">
            @{
                var notes = Model.Scripture.Notes;
                if (notes == null)
                {
                    notes = "<No Notes>";
                }
            }
            @notes
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Topic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.CreationDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Scripture?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
