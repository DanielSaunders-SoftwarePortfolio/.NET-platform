@page
@model My_Scripture_Journal.Pages.Scriptures.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Scripture</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--vvv Select List for Scripture Book Enum with proper Display Names vvv-->
            <partial asp-for="Scripture.Book" name="_Book_Select" model="@(new My_Scripture_Journal.Pages.Shared.BookSelectModel(Model.Scripture.Book.ToString()))" />

            <!--^^^ Select List for Scripture Book Enum with proper Display Names ^^^-->
            <div class="form-group">
                <label asp-for="Scripture.Chapter" class="control-label"></label>
                <input asp-for="Scripture.Chapter" class="form-control" />
                <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.StartVerse" class="control-label"></label>
                <input asp-for="Scripture.StartVerse" class="form-control" />
                <span asp-validation-for="Scripture.StartVerse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.EndVerse" class="control-label"></label>
                <input asp-for="Scripture.EndVerse" class="form-control" />
                <span asp-validation-for="Scripture.EndVerse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Notes" class="control-label"></label>
                <input asp-for="Scripture.Notes" class="form-control" />
                <span asp-validation-for="Scripture.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.Topic" class="control-label"></label>
                <select asp-for="Scripture.Topic" class="form-control">
                    @foreach (var topic in Enum.GetNames(typeof(My_Scripture_Journal.Models.ScriptureTopic)))
                    {
                        <option value="@topic">@topic</option>
                    }
                <span asp-validation-for="Scripture.Topic" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Scripture.CreationDate" class="control-label"></label>
                <input asp-for="Scripture.CreationDate" class="form-control" disabled/>
                <span asp-validation-for="Scripture.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
